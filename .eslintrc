{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "jest": true
  },
  "globals": {
    "document": true,
    "window": true,
    "$": true
  },
  "rules": {
    "arrow-parens": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      "error",
      {
        "code": 140,
        "comments": 100
      }
    ],
    "no-plusplus": "off",
    "no-tabs": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "one-var": "off",
    "import/order": [
      "error",
      {
        "group": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to"
        ],
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ],
    "react/jsx-indent": [
      "error",
      "tab"
    ],
    "react/jsx-indent-props": [
      "error",
      "tab"
    ],
    "react/sort-comp": [
      "error",
      {
        "order": [
          "static-methods",
          "constructor",
          "render",
          "lifecycle",
          "everything-else"
        ]
      }
    ]
  }
}
